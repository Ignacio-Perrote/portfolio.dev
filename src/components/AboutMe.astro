---
import ProfileCheck from "../icons/ProfileCheck.astro";
import TitleSection from "./TitleSection.astro";
import SectionContainer from "./ui/SectionContainer.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

---

<SectionContainer id="about-me">
  <ProfileCheck slot="icon" />
  <TitleSection slot="title" set:html={i18n.SECTION.ABOUT.TITLE}/>
  <article
    class="flex flex-col items-center justify-center gap-16 text-gray-700 dark:text-gray-300 md:flex-row"
  >
    <div
      class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-tertiary [&>p>strong]:font-mono text-pretty order-2 md:order-1"
    >
    <p set:html={i18n.SECTION.ABOUT.P1} />
      <p set:html={i18n.SECTION.ABOUT.P2} />
    </div>
    <img
      width="200"
      height="200"
      src="Projects/NachoSmile.webp"
      alt={i18n.SECTION.ABOUT.IMAGE_ALT}
      class="order-1 object-cover w-64 h-full p-1 md:order-2 lg:p-2 lg:w-64 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-4 ring-black/70 dark:ring-secondary"
      style="object-position: 50% 50%"
    />
  </article>
</SectionContainer>
