---
const { href } = Astro.props;
---

<a
  target="_blank"
  href={href}
  role="link"
  class="inline-flex
    items-center justify-center
    gap-2
    px-3 py-2
    space-x-2
    text-base text-md
    transition duration-300 ease-in-out
    max-w-fit rounded-xl
    focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-offset-2
    active:bg-black
    bg-gray-100 text-gray-800 border-gray-300
    dark:text-white dark:bg-gray-800 border dark:border-gray-600
    hover:bg-gray-800 hover:border-gray-900 hover:text-white
    dark:hover:bg-primary dark:hover:text-black"
>
  <slot />
</a>
